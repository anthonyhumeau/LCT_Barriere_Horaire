<layouts>
	<!-- A generic, centered layout. -->
	<layout id="MainLayout">
		<drawable class="Background"/>
		<text-area id="label" x="center" y="25%" width="100%" height="100%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" >
			<fonts>
       	 		<font>Graphics.FONT_SYSTEM_LARGE</font>
      	  		<font>Graphics.FONT_SYSTEM_MEDIUM</font>
        		<font>Graphics.FONT_SYSTEM_SMALL</font>
    		</fonts>
    	</text-area>
		<text-area id="subLabel" x="center" y="45%" width="100%" height="100%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" >
			<fonts>
       	 		<font>Graphics.FONT_SYSTEM_LARGE</font>
      	  		<font>Graphics.FONT_SYSTEM_MEDIUM</font>
       	 		<font>Graphics.FONT_SYSTEM_SMALL</font>
      	  		<font>Graphics.FONT_SYSTEM_TINY</font>
        		<font>Graphics.FONT_SYSTEM_XTINY</font>
    		</fonts>
    	</text-area>
		<text-area id="value" x="center" y="60%" width="100%" height="100%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" >
			<fonts>
       	 		<font>Graphics.FONT_SYSTEM_NUMBER_HOT</font>
      	  		<font>Graphics.FONT_SYSTEM_NUMBER_MEDIUM</font>
        		<font>Graphics.FONT_SYSTEM_NUMBER_MILD</font>
    		</fonts>
    	</text-area>
	</layout>
